<form action="/cliente/comprar" method="POST">
    <div class="card col-8 mx-auto">
        <div class="card-header">
            <h1>Compra en linea </h1>
        </div>
        <div class="card-body">
            <div class="form-group mx-auto">
                <input type="text" name="producto" class="form-control"
                    placeholder="Ingrese el nombre del producto a comprar">
            </div>
            <div class="form-group mx-auto">
                <input type="number" name="precio" class="form-control" placeholder="Ingrese el precio del producto">
            </div>
            <input type="submit" value="Comprar" class="btn btn-outline-success btn-block mt-4">
        </div>
    </div>
</form>